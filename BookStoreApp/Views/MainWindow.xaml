<Window x:Class="BookStoreApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Store" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="BookList" ItemsSource="{Binding Books}" Margin="92,56,76,270">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding title}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Author.name}"/>
                        <TextBlock Text="{Binding Category.name}"/>
                        <!-- Wyświetl inne właściwości książki -->
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Dodaj książkę" Click="AddBookButton_Click" Margin="10,278,627,86"/>
        <Button Content="Usuń książkę" Click="DeleteBookButton_Click" Margin="566,237,45,113"/>
        <Button Content="Zamów książkę" Click="OrderBookButton_Click" Margin="264,256,300,86"/>
    </Grid>
</Window>
