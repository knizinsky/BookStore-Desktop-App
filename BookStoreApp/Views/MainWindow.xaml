<Window x:Class="BookStoreApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Store" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="BookList" ItemsSource="{Binding Books}" DisplayMemberPath="title" Margin="0,326,583,0"/>
        <Button Content="Dodaj książkę" Click="AddBookButton_Click" Margin="10,237,627,127"/>
        <Button Content="Edytuj książkę" Click="EditBookButton_Click" Margin="204,226,360,116"/>
        <Button Content="Usuń książkę" Click="DeleteBookButton_Click" Margin="490,230,121,120"/>
    </Grid>
</Window>
